<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>inscription</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="/login-inscription/fonts/material-icon/css/material-design-iconic-font.min.css">
    <!-- Main css -->
    <link rel="stylesheet" href="/login-inscription/css/style.css">
</head>

<body  style="background-image:url(./img/gallery/3.jpg);background-repeat: no-repeat;background-size: cover;background-position: center">
    <div class="main">
        <a class="acceuil" href="/">ACCEUIL</a>
        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <% if(error != '') { %>
                        <p style="color: red"><strong><%= error %></strong></p>
                        <% } %>
                        <h2 class="form-title">INSCRIPTION</h2>
                        <form method="POST" class="register-form" id="register-form">
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" name="username" id="name" placeholder="Nom utilisateur" />
                            </div>
                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" name="email" id="email" placeholder="Votre Email" />
                            </div>
                            <div class="form-group">
                                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" name="password" id="pass" placeholder="Mot de passe" />
                            </div>
                            <div class="form-group">
                                <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input type="password" name="password2" id="re_pass" placeholder="RÃ©peter Votre Mot De Pass" />
                            </div>

                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Enregistrer" />
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="/login-inscription/images/signin-image.jpg" alt="sing up image"></figure>
                        <a href="/users/login" class="signup-image-link">J'ai deja un compte</a>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- JS -->
    <script src="/login-inscription/vendor/jquery/jquery.min.js"></script>
    <script src="/login-inscription/js/main.js"></script>
</body>

</html>